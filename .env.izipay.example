# ============================================
# BLXK Studio - Environment Variables
# ============================================
# IMPORTANTE: Copiar este archivo como .env.local
# y reemplazar los valores con tus credenciales reales
# ============================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key  # ⚠️ NUNCA exponer en frontend

# NextAuth Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_nextauth_secret  # Generar con: openssl rand -base64 32

# Izipay Configuration
# ⚠️ Para TEST: usar credenciales de prueba
# ⚠️ Para PRODUCCIÓN: usar credenciales reales
NEXT_PUBLIC_IZIPAY_PUBLIC_KEY=your_izipay_public_key
NEXT_PUBLIC_IZIPAY_ENDPOINT=https://api.micuentaweb.pe
NEXT_PUBLIC_IZIPAY_JS_URL=https://static.micuentaweb.pe/static/js/krypton-client/V4.0/stable/kr-payment-form.min.js

# Izipay Backend Credentials (keep secret)
IZIPAY_USERNAME=your_izipay_username
IZIPAY_PASSWORD=your_izipay_password  # ⚠️ Usado para firmar webhook

# Resend Configuration (for sending emails)
RESEND_API_KEY=your_resend_api_key

# Backend Configuration
NEXT_PUBLIC_BACKEND_URL=https://api.your-domain.com
BACKEND_URL=https://api.your-domain.com
NEXT_PUBLIC_N8N_WEBHOOK_URL=your_n8n_webhook_url
NEXT_PUBLIC_BACKEND_READ_TOKEN=your_backend_token

# System Configuration
NODE_ENV=production
PORT=3010
